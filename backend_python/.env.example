# Environment Configuration Template
# Copy this file to .env and fill in your actual values

# Application Environment
ENVIRONMENT=development  # Set to 'production' for AWS deployment

# MySQL Database Configuration (for production)
MYSQL_HOST=localhost
MYSQL_USER=root
MYSQL_PASSWORD=your_mysql_password_here
MYSQL_DATABASE=investment_parody_token
MYSQL_PORT=3306

# Twitter OAuth Configuration
TWITTER_CONSUMER_KEY=your_twitter_consumer_key_here
TWITTER_CONSUMER_SECRET=your_twitter_consumer_secret_here

# JWT and Session Security
JWT_SECRET=your_jwt_secret_key_here_make_it_long_and_random
SESSION_SECRET=your_session_secret_key_here_also_long_and_random

# Solana/Helius API Configuration
HELIUS_API_KEY=your_helius_api_key_here

# Frontend URL (for CORS and redirects)
FRONTEND_URL=http://localhost:5173  # Change to your CloudFront URL in production

# Optional: Additional Security Headers
SECURE_SSL_REDIRECT=false  # Set to true in production with SSL
SECURE_HSTS_SECONDS=31536000  # Only enable in production

# Example Production Values:
# ENVIRONMENT=production
# MYSQL_HOST=your-rds-endpoint.us-east-1.rds.amazonaws.com
# FRONTEND_URL=https://d1234567890123.cloudfront.net
# SECURE_SSL_REDIRECT=true 