# Production Environment for AWS Deployment
# Fill in the actual values after creating AWS resources

ENVIRONMENT=production

# RDS MySQL Configuration
MYSQL_HOST=your-rds-endpoint.us-east-1.rds.amazonaws.com
MYSQL_USER=admin
MYSQL_PASSWORD=your_secure_rds_password_here
MYSQL_DATABASE=investment_parody_token
MYSQL_PORT=3306

# Twitter OAuth (Get from https://developer.twitter.com)
TWITTER_CONSUMER_KEY=your_twitter_consumer_key
TWITTER_CONSUMER_SECRET=your_twitter_consumer_secret
TWITTER_BEARER_TOKEN=your_regenerated_twitter_bearer_token

# Security Keys (Generate random strings)
JWT_SECRET=your_jwt_secret_at_least_32_characters_long_random_string
SESSION_SECRET=your_session_secret_also_32_characters_random_string

# Helius API for Solana (Get from https://helius.xyz)
HELIUS_API_KEY=your_helius_api_key

# Frontend URL (Update after creating CloudFront)
FRONTEND_URL=https://your-cloudfront-distribution.cloudfront.net

# Production Security
SECURE_SSL_REDIRECT=true
SECURE_HSTS_SECONDS=31536000 